{
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "overrides": [
        {
            "files": [
                "*.js"
            ],
            "rules": {
                "no-underscore-dangle": "off",
                "no-prototype-builtins": "off",
                "no-unused-vars": "off",
                "max-len": "off",
                "no-console": "off",
                "class-methods-use-this": "off",
                "no-param-reassign": "off",
                "new-cap": "off"
            }
        }
    ]
}
